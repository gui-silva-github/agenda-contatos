<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:gravity="center"
    android:background="@color/fundo_tela">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONSULTA DE CONTATOS"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textColor="@color/texto_tela"/>

        <ImageView
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/agenda"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameSearchText"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Nome"
            />

        <EditText
            android:id="@+id/nameSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:hint="Digite o nome"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginLeft="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phoneSearchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Telefone" />

        <EditText
            android:id="@+id/phoneSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textAlignment="center"
            android:hint="Digite o telefone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="20sp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/salvar"
            android:onClick="update"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/excluir"
        android:onClick="delete"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/previous"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:onClick="registroAnterior"
            android:textSize="18dp"
            android:text="Anterior" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/next"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:textSize="18dp"
            android:onClick="proximoRegistro"
            android:text="PrÃ³ximo" />

    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:onClick="fecharTela"
        android:text="Voltar"
        android:textSize="18dp"
        android:textAlignment="center" />

</LinearLayout>