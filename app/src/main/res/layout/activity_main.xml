<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:gravity="center"
    android:background="@color/fundo_tela">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGENDA DE CONTATOS"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textColor="@color/texto_tela"/>

        <ImageView
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/agenda"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameText"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Nome"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:hint="Digite seu nome"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginLeft="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Telefone" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textAlignment="center"
            android:maxLength="19"

            android:hint="Digite seu telefone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:textSize="18dp"
            android:onClick="inserirRegistro"
            android:text="Salvar" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/search"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:onClick="telaConsulta"
            android:textSize="18dp"
            android:text="Consultar" />

    </LinearLayout>

    <Button
        android:id="@+id/close"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:onClick="fecharTela"
        android:text="Fechar"
        android:textSize="18dp"
        android:textAlignment="center" />

</LinearLayout>